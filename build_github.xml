<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="build_jar" name="Create all Jars for Project DbExport">
	<property name="buildSubDir" value="/github" />

	<import file="build.xml" />

	<target name="create_versionfile">
		<delete file="${buildPath}/bin/version.txt" />
		<echo file="${buildPath}/bin/version.txt" append="false">${version}${line.separator}${buildTime}${line.separator}https://raw.githubusercontent.com/hudeany/dbexport/master/Versions.xml</echo>
	</target>

	<target name="create_versioninfo">
		<echo file="Versions.xml" message="&lt;?xml version=&apos;1.0&apos; encoding=&apos;utf-8&apos; standalone=&apos;yes&apos;?>${line.separator}&lt;ApplicationVersions creationDate=&apos;${buildTime}&apos;>${line.separator}&#9;&lt;DbExport version=&apos;${version}&apos; md5CheckSum=&apos;${checksumMD5}&apos;>https://github.com/hudeany/dbexport/releases/download/${version}/DbExport-${version}.jar&lt;/DbExport>${line.separator}&lt;/ApplicationVersions>" />
	</target>
</project>
